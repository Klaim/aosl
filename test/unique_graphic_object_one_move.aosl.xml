<?xml version="1.0" encoding="utf-8" ?>

<!--

		AOSL Test : Unique Graphic Object With a Move
		=============================================

		A simple sequence with only one graphic object moved between two nodes.

-->

<sequence xmlns="artofsequence.org/aosl/2.0" name="Test : Unique Graphic Object With a Move" id="test-unique-graphic-object-transition" >

	<library>
		<resource id="image_character" type="image">./resources/character.png</resource>
	</library>

	<canvas>
		<area x="800" y="600" z="0" />

		<objects>
			<sprite id="a_character" resource="image_character" active="true">
				<graphic></graphic>
			</sprite>
		</objects>
	</canvas>

	<storygraph begin="stage_0" >

		<navigation>

		</navigation>

		<transitions>

			<transition id="move_0_1" from="stage_0" to="stage_1" >
				<transform object="a_character">
					<absolute>
						<translation x="100" y="100" />
					</absolute>
				</transform>
			</transition>

		</transitions>

		<nodes>
			<node id="stage_0" />
			<node id="stage_1" />
		</nodes>

	</storygraph>

</sequence>